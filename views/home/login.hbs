<h2>Login</h2>
<form action="/login" method="post">
    {{>validationSummary}}
    <input type="text" class="form-register" placeholder="Username" value="{{username}}"></input><br>
    <input type="password" class="form-register" placeholder="Password" value="{{password}}"></input><br>
    <button class="form-button" type="submit">Login</button>
</form>
